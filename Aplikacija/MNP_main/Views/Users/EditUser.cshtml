@model DAL.Models.User
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit User"];
}
<link href="~/css/profil.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <h1 class="menu-title">@Localizer["Edit User"]</h1>
            </div>
        </div>
    </div>
</div>

<div class="container col-6">
    <form class="modal-content m-5 p-2" method="post" action="/Users/ChangeUser">
        <div class="modal-body">
            <div class="form-group form-row justify-content-between">
                <div class="form-group flex-grow-1 mr-3">
                    <label>@Localizer["Username"]</label>
                    <input class="form-control" type="text" name="UserName" placeholder="@Model.UserName" />
                </div>
            </div>
            <div class="form-group form-row justify-content-between">
                <div>
                    <label>@Localizer["First name"]</label>
                    <input class="form-control" type="text" name="FirstName" placeholder="@Model.FirstName" />
                </div>
                <div>
                    <label>@Localizer["Last name"]</label>
                    <input class="form-control" type="text" name="LastName" placeholder="@Model.LastName" />
                </div>
            </div>
            <div class="form-group">
                <label>@Localizer["Address"]</label>
                <input class="form-control" type="text" name="Address" placeholder="@Model.Address" />
            </div>
            <div class="form-group">
                <label>@Localizer["Phone number"]</label>
                <input class="form-control" type="text" name="PhoneNumber" placeholder="@Model.PhoneNumber" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" name="Email" placeholder="@Model.Email" />
            </div>
            <div class="form-group form-row justify-content-between">
                <div>
                    <label>@Localizer["Password"]</label>
                    <input class="form-control" type="password" name="Password" />
                </div>
                <div>
                    <label>@Localizer["Confirm password"]</label>
                    <input class="form-control" type="password" name="ConfirmPassword" />
                </div>
            </div>
            <div class="form-group form-row justify-content-between">
                <div>
                    <label>@Localizer["UCMN"]</label>
                    <input class="form-control" type="text" name="UCMN" placeholder="@Model.UMCN" />
                </div>
                <div>
                    <label>@Localizer["Card number"]</label>
                    <input class="form-control" type="text" name="CardNumber" placeholder="@Model.CardNumber" />
                    <input class="form-control" style="display: none" type="text" value="@Model.Id" name="Id" />
                </div>
            </div>
        </div>
        <div class="modal-footer m-0 row justify-content-between">
            <a class="btn btn-outline-danger" asp-area="" asp-controller="Users" asp-action="Return">@Localizer["Cancel"]</a>
            <button class="btn btn-success" type="submit">@Localizer["Submit"]</button>
        </div>
    </form>
</div>

